---
export interface Props {
    title: string
    description: string
    ltr?: boolean
}

const { title, description, ltr= true } = Astro.props
---

<div
        class="spotlight-area"
        style=`background: radial-gradient(ellipse 50% 50% at ${ltr ? 70 : 30}% 50%, #1D1D1D, #111) black no-repeat`>
    <div class=`spotlight ${ltr ? '' : 'spotlight-rtl'}`>
        <section class="spotlight-slot">
            <slot />
        </section>
        <section class="spotlight-content">
            <div class="spotlight-background"></div>
            <div class="spotlight-text">
                <h2>{title}</h2>
                <h4>{description}</h4>
            </div>
        </section>
    </div>
</div>
<style>
    .spotlight-area {
        padding: 8rem 0 8rem 0;
        width: 100%;
    }
    .spotlight {
        align-items: center;
        display: flex;
        flex-direction: column-reverse;
        justify-content: space-between;
        margin: 0 auto 0 auto;
        max-width: 80em;
        width: 80%;
    }
    .spotlight-slot {
        display: flex;
        max-width: 44rem;
        min-width: 50%;
        justify-content: center;
    }
    .spotlight-content {
        min-width: 40%;
        text-align: center;
        padding: 0 0 2rem 0;
        position: relative;
    }
    .spotlight-text {
        margin: 0 auto 0 auto;
    }
    .spotlight-text > *:first-child {
        max-width: 32rem;;
    }
    .spotlight-text > *:last-child {
        color: #aaa;
        max-width: 30rem;
        margin-top: 2rem;
    }

    @media (min-width: 768px) {
        .spotlight {
            flex-direction: row;
        }
        .spotlight-rtl {
            flex-direction: row-reverse;
        }
        .spotlight-content {
            padding: 5rem 0;
        }
    }
</style>
