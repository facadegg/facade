---
export interface Props {
    title: string
    description: string
    ltr?: boolean
}

const { title, description, ltr= true } = Astro.props
---

<div
        class="spotlight-area">
    <div class=`spotlight ${ltr ? '' : 'spotlight-rtl'}`>
        <section class="spotlight-slot">
            <slot />
        </section>
        <section class="spotlight-content">
            <div class="spotlight-background"></div>
            <div class="spotlight-text">
                <h2>{title}</h2>
                <h4>{description}</h4>
            </div>
        </section>
    </div>
</div>
<style>
    .spotlight-area {
        padding: 0 2rem 1rem 2rem;
        margin-bottom: 2rem;
        width: 100%;
    }
    .spotlight {
        align-items: center;
        display: flex;
        flex-direction: column-reverse;
        justify-content: space-between;
        margin: 0 auto 0 auto;
        max-width: min(80em, calc(100% - 4rem));
        min-width: min(80em, 80%);
    }
    .spotlight-slot {
        display: flex;
        max-width: 44rem;
        justify-content: center;
    }
    .spotlight-content {
        text-align: center;
        padding: 0 0 2rem 0;
        position: relative;
    }
    .spotlight-text {
        margin: 0 auto 0 auto;
    }
    .spotlight-text > *:first-child {
        line-height: 1em;
        max-width: 32rem;
        margin-top: 0;
        margin-bottom: 1rem;
        padding-top: 0;
    }
    .spotlight-text > *:last-child {
        color: #aaa;
        max-width: 24rem;
    }

    @media (min-width: 768px) {
        .spotlight-area {
            margin-bottom: 8rem;
            padding: 0 8rem 8rem 8rem;
        }
        .spotlight {
            flex-direction: row;
        }
        .spotlight-rtl {
            flex-direction: row-reverse;
        }
        .spotlight-content {
            padding: 5rem 0;
        }
        .spotlight-text > *:first-child {
            line-height: 1.4em;
        }
        .spotlight-text > *:last-child {
            line-height: 1.4em;
            max-width: 30rem;
            margin-top: 2rem;
        }
    }
</style>
