---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: 'Inria Sans';
		font-style: normal;
		font-weight: 700;
		font-display: swap;
		src: url(https://fonts.gstatic.com/s/inriasans/v14/ptRPTiqXYfZMCOiVj9kQ3FLdPQxPqMQ0bX8.woff2) format('woff2');
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}
	@font-face {
		font-family: 'Inter';
		src: url('/fonts/Inter.woff2') format('woff2');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	@font-face {
		font-family: 'Inter';
		src: url('/fonts/Inter.woff2') format('woff2');
		font-weight: 500;
		font-style: normal;
		font-display: swap;
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	@font-face {
		font-family: 'Inter';
		src: url('/fonts/Inter.woff2') format('woff2');
		font-weight: 600;
		font-style: normal;
		font-display: swap;
		unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+0304, U+0308, U+0329, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
	}

	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}

	* {
		letter-spacing: -.03em;
	}

	html {
		background: radial-gradient(ellipse 50% 80rem at 0% 15rem, #1D1D1D, rgba(0, 0, 0, .16)),
					radial-gradient(ellipse 50% 80rem at 50% 3rem, #1D1D1D, rgba(0, 0, 0, .16)),
				    black;
		color: #eee;
		font-family: Inter, system-ui, sans-serif;
		margin: 0;
		padding: 0;
	}
	body {
		margin: 0;
		padding: 0;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	h1 {
		font-family: 'Inria Sans';
		font-size: 2.2em;
		font-weight: 700;
		letter-spacing: -.02em;
		margin: 0;
		padding: 0 12% 0 12%;
	}
	h2 {
		font-family: 'Inria Sans';
		font-size: 2em;
		font-weight: 500;
		padding: 0;
		line-height: 1.25em;
	}
	h3 {
		font-size: 1.25em;
		margin-top: 2rem;
		margin-bottom: 0.25rem;
		line-height: 1.5em;
	}
	h4 {
		font-size: 1em;
		font-weight: 400;
		line-height: 1.5em;
		margin: 0;
		padding: 0;
	}

	h1, h2 {
		background: linear-gradient(180deg, #fff 22.5%, rgba(255,255,255,.7) 100%);
		background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	@media (min-width: 768px) {
		h1 {
			font-size: 4em;
			padding: unset;
		}

		h2 {
			font-size: 3em;
			margin: 0;
			padding: 0;
		}

		h3 {
			font-size: 2em;
			font-weight: 400;
			margin-top: 1rem;
		}

		h4 {
			font-size: 1.25em;
		}
	}
</style>
